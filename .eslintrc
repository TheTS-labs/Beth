{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "overrides": [{
        "files": ["*.ts", "*.tsx"],
        "extends": ["@wemake-services/typescript/strict"],
        "parserOptions": {"project": ["./tsconfig.json"]},
        "rules": {
            "@typescript-eslint/semi": [2, "always"],
            "quotes": [2, "double", { "avoidEscape": true }]
        }
    }]
}