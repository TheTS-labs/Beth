{
  "name": "root",
  "packageManager": "yarn@3.6.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "backend:start": "yarn workspace backend run -T ts-node main.ts",
    "backend:start:dev": "yarn workspace backend run -T nodemon main.ts",
    "backend:migrate": "yarn workspace backend knex migrate:latest --knexfile knexfile.js --migrations-directory db/migrations",
    "backend:seed": "yarn workspace backend knex seed:run",
    "backend:test": "yarn workspace backend jest --detectOpenHandles --forceExit --maxWorkers=50%",
    "backend:lint": "yarn eslint 'backend/**/*.{ts,tsx}'",
    "root:lint": "yarn eslint '**/*.{ts,tsx}'",
    "root:start:dev": "yarn concurrently \"yarn backend:start:dev\" \"yarn frontend:dev\" -n \"SERVER,CLIENT\" -c \"bgCyan.bold,bgGreen.bold\"",
    "frontend:cypress": "yarn workspace frontend cypress open",
    "frontend:test": "yarn workspace frontend cypress run",
    "frontend:dev": "cd frontend && chmod +x ./dev_server.sh && ./dev_server.sh",
    "frontend:start": "cd frontend && chmod +x ./start_server.sh && ./start_server.sh",
    "frontend:build": "yarn workspace frontend next build",
    "frontend:lint": "yarn eslint 'frontend/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "env-var": "^7.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.5.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@wemake-services/eslint-config-typescript": "^3.1.1",
    "concurrently": "^8.2.1",
    "eslint": "^8.48.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nodemon": "^3.0.1"
  }
}
